{

  "manifest_version": 2,
  "name": "Kananization",
  "version": "1.0",
 
  "description": "Transliterates english words into japanese kana",
  "icons": {
    "48": "icons/kana.png"
  },
  
  "applications": {
    "gecko": {
      "id": "kananization@nonamegarage.com",
      "strict_min_version": "45.0"
    }
  },
  
  "browser_action": {
    "default_icon": "icons/kana.png",
    "default_title": "Kananization"    
  },
  
  "options_ui": {
      "page": "options.html"
  },

  "content_scripts": [
    {      
	  "matches": ["<all_urls>"],
      "js": ["kana.js"]
    }
  ]

}